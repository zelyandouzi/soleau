<h1>Listing envelops</h1>

<% @envelops.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |envelop| %>
      <div class="span4">
   <strong><%=
	if envelop.picture.present?
		image_tag envelop.picture_url, :width => '100%'
	else
		 "Image Not Available"
	end
%></Strong>
        <h4><%= link_to envelop.name, envelop %></h4>
        <%= envelop.description %>
      </div>
    <% end %>
  </div>
<% end %>