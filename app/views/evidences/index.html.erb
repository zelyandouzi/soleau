<h1>Listing evidences</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Envelop</th>
      <th>Encoding</th>
      <th>Attached</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evidences.each do |evidence| %>
      <tr>
        <td><%= evidence.body %></td>
        <td><%= evidence.envelop_id %></td>
        <td><%= evidence.encoding %></td>
        <td><%= evidence.attached %></td>
        <td><%= link_to 'Show', evidence %></td>
        <td><%= link_to 'Edit', edit_evidence_path(evidence) %></td>
        <td><%= link_to 'Destroy', evidence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Evidence', new_evidence_path %>
